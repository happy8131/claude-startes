{
  "permissions": {
    "allow": [
      "Bash",
      "mcp__playwright",
      "Skill(keybindings-help)",
      "Skill(git:commit)",
      "WebFetch(domain:docs.anthropic.com)",
      "mcp__shadcn__search_items_in_registries",
      "mcp__shadcn",
      "mcp__shadcn__view_items_in_registries"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "playwright"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"테스트 훅!\" >> ./hook-test.txt"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -NoProfile -ExecutionPolicy Bypass -File .claude\\hooks\\notify-permission.ps1",
            "async": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -NoProfile -ExecutionPolicy Bypass -File .claude\\hooks\\notify-stop.ps1",
            "async": true
          }
        ]
      }
    ]
  }
}
